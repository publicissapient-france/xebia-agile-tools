<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#8A2A7C"/>
            <stroke
                    android:width="1dp"
                    android:color="#5B1251"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#8A2A7C"
                    android:endColor="#5B1251"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#5B1251"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>